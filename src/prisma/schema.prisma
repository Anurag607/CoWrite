generator client {
  provider = "prisma-client-js"
}

// Connection string for MongoDB database ----------------
datasource db {
  provider = "mongodb"
  url      = env("NEXT_PUBLIC_MONGODB_URI")
}

model user {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model document {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  desc      String
  descImg   String
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
}
